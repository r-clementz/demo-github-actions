{
  "name": "example-running-tests",
  "type": "commonjs",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "start": "concurrently npm:backend npm:dev",
    "backend": "node backend/index",
    "dev": "vite",
    "build": "vite build",
    "api-tests": "newman run api-tests/author-api.postman_collection.json",
    "wdio": "wdio run wdio.conf.js",
    "unit-tests": "node jest-run-as-module.cjs && node --experimental-vm-modules node_modules/jest/bin/jest.js; node jest-run-as-module.cjs commonjs"
  },
  "dependencies": {
    "better-express-store": "^1.0.4",
    "better-sqlite3": "^7.5.0",
    "concurrently": "^7.1.0",
    "express": "^4.17.3",
    "express-session": "^1.17.2",
    "nodemon": "^2.0.15",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^1.0.7",
    "@wdio/cli": "^7.19.6",
    "@wdio/cucumber-framework": "^7.19.5",
    "@wdio/local-runner": "^7.19.5",
    "@wdio/spec-reporter": "^7.19.5",
    "chromedriver": "^100.0.0",
    "dotenv": "^16.0.0",
    "fetch": "^1.1.0",
    "jest": "^28.0.2",
    "vite": "^2.9.0",
    "wdio-chromedriver-service": "^7.3.2"
  },
  "jest": {
    "testMatch": [
      "<rootDir>unit-tests/**/*.test.js"
    ]
  }
}